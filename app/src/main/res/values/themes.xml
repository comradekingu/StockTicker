    <item name="android:dialogTheme">@style/AlertDialog</item>
    <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    <item name="tabTextAppearance">@style/TabTextAppearence</item>
    <item name="dialogTheme">@style/AlertDialog</item>
    <item name="alertDialogTheme">@style/AlertDialog</item>
    <item name="editTextStyle">@style/EditTextStyle</item>
    <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
    <item name="snackbarStyle">@style/Snackbar</item>
    <item name="snackbarTextViewStyle">@style/Snackbar.TextView</item>
  </style>

  <style name="StocksWidget.App.Theme" parent="BaseAppTheme"/>

  <style name="TranslucentTheme" parent="StocksWidget.App.Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@color/transparent</item>
  </style>

  <style name="SplashTheme" parent="TranslucentTheme" />

  <style name="MainActivityTheme" parent="StocksWidget.App.Theme">
    <item name="android:statusBarColor">@color/transparent</item>
  </style>

  <style name="NewsFeedActivityTheme" parent="StocksWidget.App.Theme" />

  <style name="GraphActivityTheme" parent="StocksWidget.App.Theme" />

  <style name="AddPositionTheme" parent="StocksWidget.App.Theme" />

  <style name="WidgetSettingsTheme" parent="StocksWidget.App.Theme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowShowWallpaper">true</item>
  </style>

  <style name="SearchTheme" parent="StocksWidget.App.Theme" />

  <style name="DbViewerTheme" parent="StocksWidget.App.Theme" />
</resources>